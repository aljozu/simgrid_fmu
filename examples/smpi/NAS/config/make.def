#-----------------------------------------------------------------------------
# Compiler and flags for SimGrid's SMPI
#-----------------------------------------------------------------------------
MPIF77 = smpiff  # Fortran compiler (if needed)
MPICC  = smpicc  # C compiler for SimGrid

FLINK  = $(MPIF77)
CLINK  = $(MPICC)

FMPI_LIB =
CMPI_LIB =

#-----------------------------------------------------------------------------
# Optimization flags (modify for your system)
#-----------------------------------------------------------------------------
FFLAGS  = -O3 -march=native -Wall
CFLAGS  = -O3 -march=native -Wall

#-----------------------------------------------------------------------------
# Linker flags
#-----------------------------------------------------------------------------
FLINKFLAGS = $(FFLAGS)
CLINKFLAGS = $(CFLAGS)

#-----------------------------------------------------------------------------
# Where to place executables
#-----------------------------------------------------------------------------
BINDIR = ../bin

#-----------------------------------------------------------------------------
# Additional settings for SimGrid
#-----------------------------------------------------------------------------
SMPI_PRELOAD = --cfg=smpi/privatize_global_variables:yes
